<Window x:Class="FactorialApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вычисление факториала" Height="200" Width="300">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBox x:Name="InputTextBox" Width="150" Margin="10" 
                 Text="Введите число" />
        <Button x:Name="CalculateButton" Content="Вычислить факториал" 
                Width="150" Margin="10" Click="CalculateButton_Click" />
        <TextBlock x:Name="ResultTextBlock" Margin="10" FontSize="16" 
                   Text="Результат: " />
    </StackPanel>
</Window>

